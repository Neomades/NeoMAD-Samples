<?xml version="1.0"?>
<!--
     A VerticalLayout represents a group of views arranged vertically.
	We want the VerticalLayout to fill all the screen size
	and the content to be centered into the VerticalLayout.


-->
<VerticalLayout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    stretchHorizontalMode="MATCH_PARENT"
    stretchVerticalMode="MATCH_PARENT"
    xsi:noNamespaceSchemaLocation="http://www.neomades.com/XSD/3.9.5/layout.xsd" >

    <VerticalLayout
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        stretchHorizontalMode="MATCH_PARENT"
        stretchVerticalMode="MATCH_PARENT"
        xsi:noNamespaceSchemaLocation="http://www.neomades.com/XSD/3.9.5/layout.xsd" >

        <HorizontalLayout
            marginTop="10"
            stretchHorizontalMode="MATCH_PARENT"
            stretchVerticalMode="MATCH_CONTENT" >

            <TextLabel
                id="@+id/ID_PROXIMITY_LATITUDE"
                stretchHorizontalMode="MATCH_PARENT"
                stretchVerticalMode="MATCH_CONTENT"
                text="@string/LATITUDE" />

            <TextField
                id="@+id/ID_PROXIMITY_LATITUDE_RESULT"
                stretchHorizontalMode="MATCH_PARENT"
                stretchVerticalMode="MATCH_CONTENT"
                contentAlignment="RIGHT" />
        </HorizontalLayout>

        <HorizontalLayout
            marginTop="10"
            stretchHorizontalMode="MATCH_PARENT"
            stretchVerticalMode="MATCH_CONTENT" >

            <TextLabel
                id="@+id/ID_PROXIMITY_LONGITUDE"
                stretchHorizontalMode="MATCH_PARENT"
                stretchVerticalMode="MATCH_CONTENT"
                text="@string/LONGITUDE" />

            <TextField
                id="@+id/ID_PROXIMITY_LONGITUDE_RESULT"
                stretchHorizontalMode="MATCH_PARENT"
                stretchVerticalMode="MATCH_CONTENT"
                contentAlignment="RIGHT" />
        </HorizontalLayout>

        <HorizontalLayout
            marginTop="10"
            stretchHorizontalMode="MATCH_PARENT"
            stretchVerticalMode="MATCH_CONTENT" >

            <TextLabel
                id="@+id/ID_PROXIMITY_RADIUS"
                stretchHorizontalMode="MATCH_PARENT"
                stretchVerticalMode="MATCH_CONTENT"
                text="@string/RADIUS" />

            <TextField
                id="@+id/ID_PROXIMITY_RADIUS_RESULT"
                stretchHorizontalMode="MATCH_PARENT"
                stretchVerticalMode="MATCH_CONTENT"
                contentAlignment="RIGHT" />
        </HorizontalLayout>
    </VerticalLayout>

    <HorizontalLayout
        marginTop="10"
        stretchHorizontalMode="MATCH_PARENT"
        stretchVerticalMode="MATCH_CONTENT" >

        <Button
            id="@+id/ID_BUTTON_SAVE"
            stretchHorizontalMode="MATCH_PARENT"
            stretchVerticalMode="MATCH_CONTENT"
            text="@string/SAVE" />
        <Button
            id="@+id/ID_BUTTON_CANCEL"
            stretchHorizontalMode="MATCH_PARENT"
            stretchVerticalMode="MATCH_CONTENT"
            text="@string/CANCEL" />
    </HorizontalLayout>

</VerticalLayout>